<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- 填充 -->
    <solid 
        android:color="@color/theme_color"
        />  
       
    <!-- 大小 -->
    <size
        android:width="200dp"
        android:height="40dp"
        />   
    
     <!-- 渐变色 -->
    <gradient 
        android:startColor="@color/theme_color"
        android:endColor="@color/theme_color"
        android:centerColor="@color/theme_color"
        android:angle="270"  
        />  
     
    <!-- 圆角 -->
    <corners  
       android:radius="6dp"  
        />  
     
    <padding 
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        />  

</shape>