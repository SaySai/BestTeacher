<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittext_shape_corners_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_no_press_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Gentle Reminder"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

    </LinearLayout>


    <LinearLayout style="@style/separatorLine"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/dialog_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textSize="18dp"
        android:text="Sure to exit?"
        android:textColor="@color/gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" >
        <LinearLayout
            android:id="@+id/ok_btn_layout"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_style_corners_no_stroke_theme" >
            <TextView
                android:id="@+id/dialog_ok_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cancle_btn_layout"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_toRightOf="@id/ok_btn_layout"
            android:background="@drawable/button_style_corners_no_stroke_theme" >

            <TextView
                android:id="@+id/dialog_cancle_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Cancel"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>