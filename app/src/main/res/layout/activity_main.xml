<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/status_bar_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView style="@style/separatorLine" />

    <LinearLayout
        android:id="@+id/tab_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/tab_no_press_color"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/homepage_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_page_iv"
                android:layout_width="@dimen/tab_height"
                android:layout_height="@dimen/tab_height"
                android:padding="8dip"
                android:src="@mipmap/tab12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_iv"
                android:layout_width="@dimen/tab_height"
                android:layout_height="@dimen/tab_height"
                android:padding="8dip"
                android:src="@mipmap/tab21" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_package_iv"
                android:layout_width="@dimen/tab_height"
                android:layout_height="@dimen/tab_height"
                android:padding="8dip"
                android:src="@mipmap/tab31" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>