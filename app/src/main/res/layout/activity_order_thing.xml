<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/tab_no_press_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="PAYMENT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dip"
                android:background="@drawable/shape_content_backgroud_white"
                android:orientation="vertical"
                android:padding="20dip">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/name_test_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER DETAIL" />

                    <TextView
                        android:id="@+id/tv_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_shape_corners_white_k_red"
                        android:ems="10"
                        android:gravity="center"
                        android:padding="2dip"
                        android:text="COMPLETED"
                        android:textSize="10sp"
                        android:textColor="#FFCC3300" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_times"
                        style="@style/text_content_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.5.5.2.20"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:layout_marginTop="8dip"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_number"
                    style="@style/user_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="16dip"
                    android:text="ORDER NO:" />

                <TextView
                    android:id="@+id/tv_teacher"
                    style="@style/user_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="8dip"
                    android:text="TEACHER:" />

                <TextView
                    android:id="@+id/tv_orderTime"
                    style="@style/user_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="8dip"
                    android:text="TIME:" />

                <TextView
                android:id="@+id/tv_money"
                style="@style/user_content_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:text="PRICE:" />

                <TextView
                    android:id="@+id/tv_total"
                    style="@style/user_content_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="8dip"
                    android:text="TOTAL PRICE:" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/button_style_corners_stroke_white"
                        android:paddingBottom="3dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="3dp"
                        android:textStyle="bold"
                        android:text="CHAT"
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_goBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/signup_style_corners_red_theme"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="EVALUATION"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_text_size"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/name_test_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="12dip"
                    android:text="Paypal Service" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dip">

                    <ImageView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/paypal" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:padding="16dip">

                        <TextView
                            style="@style/user_content_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PayPal" />

                        <TextView
                            style="@style/user_content_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need to install PayPal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_check"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/checkbox" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_goPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="48dip"
                    android:layout_marginRight="48dip"
                    android:layout_marginTop="24dip"
                    android:background="@drawable/signup_style_corners_red_theme"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="CONFIRM"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/title_text_size"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_backHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dip"
                android:layout_marginRight="44dip"
                android:layout_marginTop="80dip"
                android:background="@drawable/button_style_corners_no_stroke_theme"
                android:gravity="center"
                android:padding="10dip"
                android:text="Back to Teacher's page"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
