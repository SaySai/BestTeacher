<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="50dip"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    android:paddingTop="50dip">

    <LinearLayout
        android:id="@+id/ll_wc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_wellcome"
            android:layout_width="180dip"
            android:layout_height="180dip"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_wellcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Good family education, give you the world&apos;s good teacher!"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wellcome1"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_wellcome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text="Good family education, give you the world's good teacher!"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:background="@drawable/button_style_corners_no_stroke_theme"
            android:ems="12"
            android:gravity="center"
            android:padding="10dip"
            android:text="parents"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:background="@drawable/button_style_corners_no_stroke_theme"
            android:ems="12"
            android:gravity="center"
            android:padding="10dip"
            android:text="teacher"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dip"
            android:background="@drawable/button_style_corners_no_stroke_theme"
            android:ems="12"
            android:gravity="center"
            android:padding="10dip"
            android:text="visitor"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dip"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape_corners_white_k_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@mipmap/usericon" />

            <EditText
                android:id="@+id/et_username"
                style="@style/user_content_style"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="@null"
                android:ems="13"
                android:hint="login account"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="4dip"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/edittext_shape_corners_white_k_blue"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dip">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@mipmap/password" />

            <EditText
                android:id="@+id/et_password"
                style="@style/user_content_style"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="@null"
                android:ems="13"
                android:password="true"
                android:hint="login password"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:gravity="right"
            android:paddingLeft="4dip"
            android:text="Forgot password ?"
            android:textColor="@color/tab_no_press_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:background="@drawable/button_style_corners_no_stroke_theme"
            android:ems="13"
            android:gravity="center"
            android:padding="10dip"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:background="@drawable/signup_style_corners_red_theme"
            android:ems="13"
            android:gravity="center"
            android:padding="10dip"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dip"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/checkBox"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/checkbox"
                 />

            <TextView
                android:id="@+id/accept_tv"
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:text="Accept " />

            <TextView
                android:id="@+id/tv_law"
                style="@style/nmuber_careful_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="the legal terms" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
