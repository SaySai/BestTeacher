<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height1"
        android:background="@color/tab_no_press_color"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dip">

            <ImageView
                android:layout_width="25dip"

                android:layout_height="25dip"
                android:src="@mipmap/city" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:text="City"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:paddingTop="10dip"
            android:text="Teacher list"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dip">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@mipmap/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:text="Search"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_iv"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_below="@id/ll_title1"
        android:background="@color/tab_no_press_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/tab2_icon" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:src="@mipmap/tab1_icon" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/tab1_icon"
            android:visibility="invisible">

        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height1"
        android:layout_below="@id/ll_iv"
        android:background="@color/tab_press_color"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_subject"
            android:layout_width="0dip"
            android:layout_height="@dimen/title_height1"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dip">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="6dip"
                android:src="@mipmap/down_sanjiao" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="0dip"
            android:layout_height="@dimen/title_height1"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"

            android:paddingTop="10dip">

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="6dip"
                android:src="@mipmap/down_sanjiao" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_iv2"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:layout_below="@id/ll_tab2"
        android:background="@color/tab_press_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/tab2_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv22"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/tab2_icon"
            android:visibility="invisible" />


    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv2"></ListView>

    <!--added by husai -->
    <LinearLayout
        android:id="@+id/ll_blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/listview"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="blank"-->
            <!--android:textSize="24dp"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv"
        android:orientation="vertical"
        android:visibility="gone">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lv_city"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ListView>

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_course_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv2"
        android:orientation="horizontal"
        android:visibility="gone">

        <ListView
            android:id="@+id/lv_course1_list"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>

        <ListView
            android:id="@+id/lv_course2_list"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sort_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_iv2"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>

        <ListView
            android:id="@+id/lv_sort_list"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
    </LinearLayout>
</RelativeLayout>