<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:background="@drawable/profile_bgimge"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dip">

        <com.shanghai.haojiajiao.weight.CircleImageView
            android:id="@+id/iv_userIcon"
            android:layout_width="66dip"
            android:layout_height="66dip"
            android:layout_marginTop="20dip"
            android:src="@mipmap/default_usericon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userName"
                style="@style/name_test_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEACHER"
                />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/male_icon" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userCity"
                style="@style/textview_style_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHINA"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_myData"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/mydata" />

            <TextView
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="MY PROFILE" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_TimeSetting"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/timesetting" />

            <TextView
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text=" APPOINTMENT SETTINGS" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_booking"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/booking" />

            <TextView

                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="MY ORDERS" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/about" />

            <TextView
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="ABOUT US" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/settings" />

            <TextView
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="SETTINGS" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#EEEEEE" />

        <LinearLayout
            android:id="@+id/ll_CustomerService"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_marginLeft="16dip"
                android:src="@mipmap/contact_us_icon" />

            <TextView
                style="@style/name_tab_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="CONTACT US" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>