<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edittext_shape_corners_white"
    android:orientation="vertical"
    android:padding="0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_no_press_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dip"
            android:text="COURSE SELECTION"
            android:textColor="@color/white"
            android:textSize="20dip"
            android:textStyle="bold"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/smssdk_white"/>


<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="Course selection"
        android:textColor="@android:color/black"
        android:textSize="16dip" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/ll_course_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_above="@id/et_parentTab2Email"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_course1_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"></ListView>

           <!-- <ListView
                android:id="@+id/lv_course2_list"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ListView>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style_corners_no_stroke_theme"
                android:ems="7"
                android:gravity="center"
                android:padding="10dip"
                android:text="CONFIRM"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/tv_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dip"
                android:background="@drawable/signup_style_corners_red_theme"
                android:ems="7"
                android:gravity="center"
                android:padding="10dip"
                android:text="CANCEL"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
