                    android:layout_marginTop="5dip"
                    android:background="@null"
                    android:hint="Please write down your past learning and education experience!"
                    android:imeOptions="actionDone"
                    android:singleLine="true" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_city_list_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="right|center_vertical"
            android:text="Choose city  "
            android:background="@color/tab_no_press_color"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            />

        <ListView
            android:id="@+id/lv_city_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_no_press_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_teacher3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUD/H"
                android:textColor="@android:color/black"
                android:textSize="16dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MY COURSE"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/et_TeacherTab3Add"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="?android:attr/selectableItemBackground"
                android:src="@mipmap/add_img" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dip"
            android:background="@android:color/white"
            android:orientation="vertical">

            <ListView
                android:id="@+id/et_TeacherTab3List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>