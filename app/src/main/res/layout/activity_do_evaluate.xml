<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/tab_no_press_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:background="?android:attr/selectableItemBackground"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="评价"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="32dip">

        <ImageView
            android:id="@+id/iv_userIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dip"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingRight="16dip">

            <TextView
                android:id="@+id/tv_username"
                style="@style/name_test_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汪理高" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="16dip" />

            <TextView
                android:id="@+id/tv_times"
                style="@style/name_tab_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约时间：2015/12/30   9:00~10:00"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dip"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ratingBar0"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@mipmap/ic_star_empty" />

            <ImageView
                android:id="@+id/ratingBar1"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@mipmap/ic_star_empty" />

            <ImageView
                android:id="@+id/ratingBar2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@mipmap/ic_star_empty" />

            <ImageView
                android:id="@+id/ratingBar3"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@mipmap/ic_star_empty" />

            <ImageView
                android:id="@+id/ratingBar4"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@mipmap/ic_star_empty" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="48dip"
            android:layout_marginRight="48dip"
            android:background="@color/gray_light" />

        <EditText
            android:id="@+id/et_content"
            style="@style/name_tab_style"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginLeft="48dip"
            android:layout_marginRight="48dip"
            android:layout_marginTop="16dip"
            android:background="@null"
            android:hint="写下您的评价吧！" />

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dip"
            android:background="@drawable/signup_style_corners_red_theme"
            android:ems="13"
            android:gravity="center"
            android:padding="10dip"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>
</LinearLayout>
